<head>
    <title>{{filename}}</title>
    <style>
        .container {
  margin-top: 20vh;
  margin-bottom: 5vh;
}

h1 > a {
    color: black;
}

header {
  position: fixed;
  top: 0;
  height: 20vh;
  width: 100%;
  padding-left: 20px;
}

.sidebar {
  width: 33vw;
  position: fixed;
}

.sidebar,
ul {
  display: flex;
  flex-direction: column;
  height: 80vh;
  justify-content: space-around;
}

html,body {
    font-family: "SF Pro Display, sans-serif";
}

.content {
  margin-left: 20vw;
  width: 66vw;
  margin-bottom: 5vh;
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

li {
  margin: 0;
  padding: 0;
  padding-right: 3px;
  width: 100%;
}

a {
  text-decoration: none;
  color: gray;
}

a:hover {
  color: darkgray;
}

.content,
ul {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  padding: 40px;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  width: 40%;
  /* height: 10vh; */
  padding: 30px;
  overflow-y: scroll;
  /* display: flex; */
  /* align-items: center; */
}

.card:hover,
.active {
  width: 35%;
  background-color: #efefef;
  /* height: 25vh; */
}

.card-title {
  color: #c95252;
}

.card-title,
.description {
  padding: 10px;
  font-family: "iA Writer Duospace, monospace";
}

.card > * {
  padding-left: 10px;
}

.descriptors {
  display: flex;
  flex-wrap: wrap;
}

.descriptors > div {
  width: 33%;
  padding-top: 5px;
}

.key {
  color: blue;
}
    </style>
</head>

<body>
    <header>
        <h1><a href="">Bashdoc</a>
        </h1>
        <h4>35 functions</h4>
    </header>
    <div class="container">
        <div class="sidebar">
            {{!-- <form><input type="search" /></form> --}}
            <ul>
                {{#each thedocs}}
                <li>
                    <a href="#{{short_description}}">{{ this.short_description }}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="content">
            <ul>
                {{#each thedocs}}
                <li class="card" name="{{short_description}}" id="{{short_description}}">
                    <div class="card-title">{{ short_description }}</div>
                    <div class="description">{{ long_description }}</div>
                    {{#if params}}
                    <div class="parameters">
                        {{#each params}}
                        <div>
                            <span class="key">{{ key }}</span>: <span>{{ value }}</span>
                        </div>
                        {{/each}}
                    </div>
                    {{/if}} {{#if descriptors}}
                    <div class="descriptors">
                        {{#each descriptors}}
                        <div>
                            <span class="key">{{ key }}</span>: <span>{{ value }}</span>
                        </div>
                        {{/each}}
                    </div>
                    {{/if}} {{#if returns}}
                    <ul class="returns">
                        {{#each returns}}
                        <li>
                            <span class="key">{{ key }}</span>: <span>{{ value }}</span>
                        </li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </li>
                {{/each}}
            </ul>

        </div>
    </div>
</body>
<script>
    function sleep(ms) {
        return new Promise(resolve => setTimeout(resolve, ms));
    }
    let cards = Array.from(document.getElementsByClassName("card"));
    let as = Array.from(document.getElementsByTagName("a"));
    as.map(tag => tag.addEventListener("click", highlight));
    function highlight(event) {
        let id = event.srcElement.hash;
        cards.map(card => {
            if (`#${card.id}` === id) {
                let { backgroundColor, width, ...rest } = card.style;
                card.style.backgroundColor = "#efefef";
                card.style.width = "35%";
                sleep(1000).then(() => {
                    card.style.backgroundColor = backgroundColor;
                    card.style.width = width;
                });
            }
        });
    }
</script>
